<%= form_for ([@user, @user.paints.build]), :html => { :multipart => true} do |f| %>

<p>
	<%= f.label :title %>
	<%= f.text_field :title %>
</p>
<p>
	<%= f.label :description %>
	<%= f.text_field :description %>
</p>
<p>
	<%= f.label :paint %>
	<%= f.file_field :paint %>
</p>
<p>
	<%= f.submit "Submit" %>
</p>
<% end %>