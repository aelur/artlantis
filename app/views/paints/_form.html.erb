<%= form_for ([@user, @user.paints.build]), :html => { :multipart => true} do |f| %>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<p>
	<%= f.label :title %>
	<%= f.text_field :title %>
</p>
<p>
	<%= f.label :description %>
	<%= f.text_field :description %>
</p>
<p>
	<%= f.label :price %>
	<%= f.text_field :price %>
</p>
<p>
	<%= f.label :paint %>
	<%= f.file_field :paint %>
</p>
<p>
	<%= f.submit "Submit" %>
</p>
<% end %>